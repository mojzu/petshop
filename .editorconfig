# <http://editorconfig.org>
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[{*.yml, *.yaml}]
indent_size = 2

[*.proto]
indent_size = 2
